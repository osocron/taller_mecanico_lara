                  <TableColumn fx:id="tableColumnIDCliente" prefWidth="230.0" text="ID Cliente" />
              </columns>
               <VBox.margin>
                  <Insets right="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="generarReporteButton" mnemonicParsing="false" onAction="#generarReporteActionEvent" text="Generar Reporte">
               <HBox.margin>
                  <Insets bottom="10.0" left="15.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonReporte" mnemonicParsing="false" onAction="#crearReporteEvent" prefHeight="25.0" text="Imprimir Reporte">
               <HBox.margin>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
