<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewControlers.ViewConsultarEmpleado">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Consutla de Empleados">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="busquedaTextField" promptText="Escribe el nombre del empleado...">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonBuscar" mnemonicParsing="false" onAction="#buscarEmpleadoEvent" text="Buscar" />
                  <Button fx:id="buttonEditar" mnemonicParsing="false" onAction="#modificarEmpleadoEvent" text="Editar">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonEliminar" mnemonicParsing="false" onAction="#eliminarEmpleadoEvent" text="Eliminar">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonGuardar" mnemonicParsing="false" onAction="#guardarEmpleadoEvent" text="Guardar Cambios">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="100.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tableEmpleados">
              <columns>
                <TableColumn fx:id="idEmpleado" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="111.0" text="Id Empleado" />
                <TableColumn fx:id="nombre" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="276.0" text="Nombre" />
                  <TableColumn fx:id="puesto" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="172.0" text="Puesto" />
              </columns>
               <VBox.margin>
                  <Insets bottom="25.0" left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
