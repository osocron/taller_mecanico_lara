<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewControlers.ViewCotizar">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#cerrarVentanaEvent" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="275.0" prefWidth="348.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelCliente" text="Nombre posible cliente" />
            <TextField fx:id="textfieldCliente" />
            <Label fx:id="labelRefaccion" text="Refaccion" />
            <ComboBox fx:id="comboboxRefaccion" prefHeight="25.0" prefWidth="283.0" promptText="Arbol de levas" />
            <Label fx:id="labelAutomovil" text="Automovil" />
            <TextField fx:id="textfieldAutomovil" prefHeight="25.0" prefWidth="262.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label fx:id="labelServicio" text="Servicio" />
            <ComboBox fx:id="comboboxServicio" prefHeight="25.0" prefWidth="283.0" promptText="Balanceo" />
            <Label fx:id="labelCosto" text="Costo" />
            <TextField fx:id="textfieldCosto" />
         </children>
         <padding>
            <Insets left="50.0" top="50.0" />
         </padding>
         <BorderPane.margin>
            <Insets right="1.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <TableView fx:id="tableviewCotizar" onSort="#prepararTabla" prefHeight="185.0" prefWidth="251.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="servicioColumn" prefWidth="85.0" text="Servicio" />
          <TableColumn fx:id="refaccionColumn" prefWidth="81.0" text="Refaccion" />
            <TableColumn fx:id="totalColumn" prefWidth="81.0" text="Total" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="80.0" />
         </BorderPane.margin>
      </TableView>
   </right>
   <center>
      <VBox prefHeight="375.0" prefWidth="153.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelFecha" text="Fecha" />
            <DatePicker fx:id="datepickerFecha" prefHeight="30.0" prefWidth="79.0">
               <VBox.margin>
                  <Insets right="50.0" />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </DatePicker>
         </children>
         <BorderPane.margin>
            <Insets bottom="200.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="buttonCancelar" mnemonicParsing="false" text="Cancelar">
               <HBox.margin>
                  <Insets left="100.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonCotizar" mnemonicParsing="false" onAction="#crearCotizacionEvent" text="Cotizar">
               <HBox.margin>
                  <Insets left="150.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
