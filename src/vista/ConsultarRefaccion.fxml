               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonEliminar" mnemonicParsing="false" onAction="#eliminarRefaccionEvent" text="Eliminar">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonGuardar" mnemonicParsing="false" onAction="#guardarRefaccionEvent" text="Guardar Cambios">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="150.0" />
         </BorderPane.margin>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </bottom>
