<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="tallerPU">
        <mapping-file>entidades/entidades.xml</mapping-file>
        <class>entidades.AutomovilesEntity</class>
        <class>entidades.ClienteEntity</class>
        <class>entidades.EmpleadoEntity</class>
        <class>entidades.RefaccionEntity</class>
        <class>entidades.ServicioEntity</class>
        <class>entidades.ServicioAutomovilEntity</class>
        <class>entidades.ServicioRefaccionEntity</class>
        <class>entidades.UsuarioEntity</class>
        <class>entidades.VentaRefaccionEntity</class>
        <class>entidades.VentasEntity</class>
        <class>entidades.VentaServicioEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/taller_mecanico_lara"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="lara"/>
            <property name="javax.persistence.jdbc.password" value="taller"/>
        </properties>
    </persistence-unit>
</persistence>
